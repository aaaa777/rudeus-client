<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Rudeus.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Rudeus"
    xmlns:view="clr-namespace:Rudeus.View"
    FlyoutWidth="250"
    Shell.FlyoutBehavior="Flyout"
    >

    <FlyoutItem
        Title="ダッシュボード"
        Route="MainMenu">
        <ShellContent
            Title="Main"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

    </FlyoutItem>

    <FlyoutItem
        Title="設定"
        Route="SubMenu">
        <ShellContent
            Title="Sub1"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="SubPage" />


        <ShellContent
            Title="Home4"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />


        <ShellContent 
            Title="Home5"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    


</Shell>
